<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <!--<AssemblyName>lilylang</AssemblyName>-->
    <RootNamespace>fonder.Lilian.New</RootNamespace>
    <Deterministic>False</Deterministic>

    <AssemblyTitle>Lilian Language</AssemblyTitle>
    <AssemblyVersion>0.9.10.0</AssemblyVersion>
    <FileVersion>0.9.10.0</FileVersion>
	<InformationalVersion>Milestone 9 211227-1533</InformationalVersion>
    <Authors>Matt Sugui</Authors>
    <Copyright>Created 2021</Copyright>
    <ProductName>Lilian language interpreter</ProductName>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="archive\**" />
    <EmbeddedResource Remove="archive\**" />
    <None Remove="archive\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.PowerShell.SDK" Version="7.2.1" />
    <PackageReference Include="System.CodeDom" Version="6.0.0" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="powershell -command &quot;&amp; '$(ProjectDir)script\post.ps1' -pre -GoDeeper&quot;" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="powershell -command &quot;&amp; '$(ProjectDir)script\post.ps1' -IncrementBuild -GoDeeper&quot;" />
  </Target>

</Project>
