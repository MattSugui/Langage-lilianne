<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <!--<AssemblyName>lilylang</AssemblyName>-->
    <RootNamespace>fonder.Lilian.New</RootNamespace>
    <Deterministic>False</Deterministic>

    <AssemblyTitle>Lilian Language</AssemblyTitle>
    <AssemblyVersion>0.12.61.0</AssemblyVersion>
    <FileVersion>0.12.61.0</FileVersion>
	<InformationalVersion>Milestone 11 211228-2104</InformationalVersion>
    <Authors>Matt Sugui</Authors>
    <Copyright>Created 2021</Copyright>
    <ProductName>Lilian language interpreter</ProductName>
    <RunPostBuildEvent>OnOutputUpdated</RunPostBuildEvent>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="archive\**" />
    <EmbeddedResource Remove="archive\**" />
    <None Remove="archive\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ShellProgressBar" Version="5.1.0" />
    <PackageReference Include="System.CodeDom" Version="6.0.0" />
  </ItemGroup>

  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="powershell -command &quot;&amp; '$(SolutionDir)script\events.ps1' -pre -projectname 'lilylang'&quot;" />
  </Target>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="powershell -command &quot;&amp; '$(SolutionDir)script\events.ps1' -IncrementBuild -projectname 'lilylang'&quot;" />
  </Target>

</Project>
