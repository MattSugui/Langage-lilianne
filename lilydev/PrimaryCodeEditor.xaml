<UserControl x:Class="fonder.Lilian.Develop.PrimaryCodeEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:fonder.Lilian.Develop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>
        <Menu x:Name="menuBar" Grid.Row="0" Height="24" VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <MenuItem Header="r" FontFamily="Webdings" Click="close_Click" HorizontalAlignment="Right"/>
            <!--
            <MenuItem Header="Fichier" >
                <MenuItem x:Name="close" HorizontalAlignment="Right" Header="Close" Click="close_Click"/>
            </MenuItem>
            -->
        </Menu>
        <WindowsFormsHost x:Name="host" Grid.Row="1" Background="Red">
            
        </WindowsFormsHost>
        <!--<TextBox Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>-->
    </Grid>
</UserControl>
